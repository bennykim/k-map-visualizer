{
  "name": "geo-korea",
  "version": "1.0.5",
  "description": "A flexible library for visualizing data on South Korea's map",
  "author": "mniii",
  "repository": {
    "type": "git",
    "url": "https://github.com/bennykim/geo-korea"
  },
  "homepage": "https://github.com/bennykim/geo-korea#readme",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/esm/types/index.d.ts"
    }
  },
  "scripts": {
    "clean": "rimraf dist public/bundle.js public/bundle.js.map",
    "clean:app": "rimraf dist-app",
    "dev": "rollup -c -w",
    "build": "pnpm run clean && rollup -c",
    "build:app": "pnpm run clean:app && rollup -c --app",
    "serve": "pnpm build:app && serve -l 3007 dist-app",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "pnpm clean && pnpm test && pnpm build"
  },
  "dependencies": {
    "d3": "^7.9.0",
    "d3-geo": "^3.1.1",
    "topojson-client": "^3.1.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-typescript": "^12.1.2",
    "@testing-library/jest-dom": "5.16.5",
    "@types/d3": "^7.4.3",
    "@types/d3-geo": "^3.1.0",
    "@types/jest": "28.1.8",
    "@types/topojson-client": "^3.1.5",
    "@types/topojson-specification": "^1.0.5",
    "jest": "28.1.3",
    "jest-environment-jsdom": "28.1.3",
    "rimraf": "^6.0.1",
    "rollup": "^4.30.1",
    "rollup-plugin-copy": "^3.5.0",
    "serve": "^14.2.4",
    "ts-jest": "28.0.8",
    "tslib": "^2.8.1",
    "typescript": "^5.7.2"
  },
  "keywords": [
    "d3",
    "map",
    "korea",
    "visualization"
  ],
  "license": "MIT"
}
